package xscript.lang;

public final class String{

	private final char[] value;

	private String(int size){
		value = new char[size];
	}

	public int length(){
		return value.length;
	}

	public String operator+(Object otherObj){
		String other = toString(otherObj);
		String out = new String(value.length+other.value.length);
		int l1 = value.length;
		for(int i=0; i<l1; i++){
			out.value[i] = value[i];
		}
		int l2 = other.value.length;
		for(int i=0; i<l2; i++){
			out.value[l1+i] = other.value[i];
		}
		return out;
	}

	@Override
	public String toString(){
		return this;
	}
	
	public static String toString(Object o){
		if(o==null){
			return "null";
		}
		return o.toString();
	}
	
}
